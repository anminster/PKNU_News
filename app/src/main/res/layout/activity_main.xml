<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_icon_background"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/pknu_logo"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_weight="10"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/mainnews"
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:background="@drawable/main_icon_outline"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@mipmap/bk_image"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:background="@drawable/main_icon_outline2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주요뉴스"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/main_icon_outline1"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/submit1"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:background="@drawable/main_icon_outline"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@mipmap/bk_image"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:background="@drawable/main_icon_outline2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="설문조사"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/main_icon_outline1"/>
            </LinearLayout>
            <!--<ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/sub_news"
                android:scaleType="fitCenter"
                />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:id="@+id/subnews"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:background="@drawable/main_icon_outline"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@mipmap/bk_image"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:background="@drawable/main_icon_outline2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서브뉴스"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/main_icon_outline1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/submit2"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:background="@drawable/main_icon_outline"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@mipmap/bk_image"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:background="@drawable/main_icon_outline2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="투고함"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/main_icon_outline1"/>
            </LinearLayout>
            <!--<ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/submit_icon"
                android:scaleType="fitCenter"/>-->
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

</LinearLayout>